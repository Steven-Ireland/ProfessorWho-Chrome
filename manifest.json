{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "content_scripts": [ {
    "js": [ "jquery-2.1.1.min.js", "background.js" ],
    "matches": [ "http://bannerweb.wpi.edu/*", "https://*/*"],
	"run-at": "document_idle"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/"
  ],
  
  "manifest_version": 2
}
